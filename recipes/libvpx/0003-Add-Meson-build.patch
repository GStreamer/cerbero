+	'libvpx',
+	'c', 'cpp',
+	version: '1.13.0',
+	default_options: [
+		# Enforce c89 for c files. Don't be too strict about it though. Allow
+		# gnu extensions like "//" for comments.
+		'c_std=gnu89',
+		# Uncomment when Meson can handle this one for MSVC.
+		# 'cpp_std=gnu++11',
+		'warning_level=2',
+		'default_library=static',
+		'buildtype=debugoptimized',
