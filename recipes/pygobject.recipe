    def prepare(self):
        python_exe = self.config.get_build_python_exe()
        if python_exe:
            self.meson_options['python'] = str(python_exe)
        elif self.config.platform in (Platform.WINDOWS, Platform.DARWIN):
            self.meson_options['python'] = self.config.python_exe
