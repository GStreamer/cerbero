    version = '3.48.2'
    stype = SourceType.TARBALL
    btype = BuildType.MESON
    url = 'gnome://'
    licenses = [License.LGPLv2_1Plus]

    deps = ['glib', 'gobject-introspection']
    tarball_checksum = '0794aeb4a9be31a092ac20621b5f54ec280f9185943d328b105cdae6298ad1a7'
    meson_options = {
        'tests': False,
        'pycairo': 'disabled',
    }

    files_python = [
        f'%(pydir)s/PyGObject-{version}.dist-info',
        '%(pydir)s/gi/__init__.py',
        '%(pydir)s/gi/_constants.py',
        '%(pydir)s/gi/_error.py',
        '%(pydir)s/gi/_gi%(pext)s',
