From: Fernando Jimenez <fjimenez@igalia.com>
Date: Thu, 21 Jan 2021 15:37:27 +0100
Subject: [PATCH] gawk error when compiling in crossdev arm environment

---
 src/Makefile.am    | 2 +-
 src/mkstrtable.awk | 8 ++++----
 2 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/src/Makefile.am b/src/Makefile.am
index b91876b..4b4cfa7 100644
--- a/src/Makefile.am
+++ b/src/Makefile.am
@@ -248,7 +248,7 @@ code-from-errno.h: mkerrcodes Makefile
 
 errnos-sym.h: Makefile mkstrtable.awk errnos.in
 	$(AWK) -f $(srcdir)/mkstrtable.awk -v textidx=2 -v nogettext=1 \
-		-v prefix=GPG_ERR_ -v namespace=errnos_ \
+		-v prefix=GPG_ERR_ -v varerrno=errnos_ \
 		$(srcdir)/errnos.in >$@
 
 
diff --git a/src/mkstrtable.awk b/src/mkstrtable.awk
index c9de9c1..0e0fdc7 100644
--- a/src/mkstrtable.awk
+++ b/src/mkstrtable.awk
@@ -77,7 +77,7 @@
 #
 # The variable prefix can be used to prepend a string to each message.
 #
-# The variable namespace can be used to prepend a string to each
+# The variable varerrno can be used to prepend a string to each
 # variable and macro name.
 
 BEGIN {
@@ -102,7 +102,7 @@ header {
       print "/* The purpose of this complex string table is to produce";
       print "   optimal code with a minimum of relocations.  */";
       print "";
-      print "static const char " namespace "msgstr[] = ";
+      print "static const char " varerrno "msgstr[] = ";
       header = 0;
     }
   else
@@ -150,7 +150,7 @@ END {
   else
     print "  gettext_noop (\"" last_msgstr "\");";
   print "";
-  print "static const int " namespace "msgidx[] =";
+  print "static const int " varerrno "msgidx[] =";
   print "  {";
   for (i = 0; i < coded_msgs; i++)
     print "    " pos[i] ",";
@@ -158,7 +158,7 @@ END {
   print "  };";
   print "";
   print "static GPG_ERR_INLINE int";
-  print namespace "msgidxof (int code)";
+  print varerrno "msgidxof (int code)";
   print "{";
   print "  return (0 ? 0";
 
