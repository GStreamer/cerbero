    deps = ['gstreamer', 'gst-plugins-base', 'jpeg', 'libpng',
            'speex', 'gdk-pixbuf', 'libsoup', 'cairo',
            'orc', 'wavpack', 'flac', 'taglib', 'bzip2', 'zlib', 'libdv' ]

