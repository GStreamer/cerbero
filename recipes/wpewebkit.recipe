    def prepare(self):
        self.configure_options += f' \
            -DICU_ROOT={self.config.prefix} \
            -DZLIB_ROOT={self.config.prefix} \
            -DFREETYPE_LIBRARY={self.config.prefix}/lib/libfreetype.so \
